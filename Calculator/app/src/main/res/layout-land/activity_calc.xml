<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3pt"
        android:layout_marginRight="3pt"
        android:layout_marginTop="5pt">

        <TextView
            android:id="@+id/Num"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:textSize="60dp"
            android:inputType="numberDecimal"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2pt"
        android:layout_marginTop="3pt"
        android:layout_marginRight="2pt">

        <Button
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="+"
            android:textSize="15pt"></Button>

        <Button
            android:id="@+id/minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="-"
            android:textSize="15pt"></Button>

        <Button
            android:id="@+id/umn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="X"
            android:textSize="15pt"
            android:textStyle="italic"></Button>

        <Button
            android:id="@+id/del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="÷"
            android:textSize="15pt"></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2pt"
        android:layout_marginRight="2pt">

        <Button
            android:id="@+id/sin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Sin"
            android:textSize="15pt"
            android:textStyle="italic|bold"></Button>

        <Button
            android:id="@+id/cos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Cos"
            android:textSize="15pt"
            android:textStyle="italic|bold"></Button>

        <Button
            android:id="@+id/ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="AC"
            android:textSize="15pt"
            android:textStyle="italic|bold"></Button>

        <Button
            android:id="@+id/delite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Del"
            android:textSize="15pt"
            android:textStyle="italic|bold"></Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2pt"
        android:layout_marginRight="2pt">

        <Button
            android:id="@+id/sqrt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="√"
            android:textSize="15pt"
            android:textStyle="italic|bold"></Button>

        <Button
            android:id="@+id/pow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="x²"
            android:textSize="15pt"
            android:textStyle="italic|bold"></Button>

        <Button
            android:id="@+id/pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="%"
            android:textSize="15pt"
            android:textStyle="italic|bold"></Button>

        <Button
            android:id="@+id/plusMinus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="±"
            android:textSize="15pt"
            android:textStyle="italic|bold"></Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2pt"
        android:layout_marginTop="3pt"
        android:layout_marginRight="2pt">

        <Button
            android:id="@+id/n1"
            android:layout_width="10pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="1"
            android:textSize="15pt"></Button>

        <Button
            android:id="@+id/n2"
            android:layout_width="10pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="2"
            android:textSize="15pt"></Button>

        <Button
            android:id="@+id/n3"
            android:layout_width="10pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="3"
            android:textSize="15pt"></Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2pt"
        android:layout_marginRight="2pt">

        <Button
            android:id="@+id/n4"
            android:layout_width="10pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="4"
            android:textSize="15pt"></Button>

        <Button
            android:id="@+id/n5"
            android:layout_width="10pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="5"
            android:textSize="15pt"></Button>

        <Button
            android:id="@+id/n6"
            android:layout_width="10pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="6"
            android:textSize="15pt"></Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2pt"
        android:layout_marginRight="2pt">

        <Button
            android:id="@+id/n7"
            android:layout_width="10pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="7"
            android:textSize="15pt"></Button>

        <Button
            android:id="@+id/n8"
            android:layout_width="10pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="8"
            android:textSize="15pt"></Button>

        <Button
            android:id="@+id/n9"
            android:layout_width="10pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="9"
            android:textSize="15pt"></Button>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2pt"
        android:layout_marginRight="2pt">

        <Button
            android:id="@+id/point"
            android:layout_width="10pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="."
            android:textSize="15pt"></Button>

        <Button
            android:id="@+id/n0"
            android:layout_width="10pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="15pt"></Button>

        <Button
            android:id="@+id/equal"
            android:layout_width="10pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="="
            android:textSize="15pt"></Button>

    </LinearLayout>

</LinearLayout>